{
  "name": "claude-mem",
  "version": "9.0.6-jv.8",
  "description": "Memory compression system for Claude Code - persist context across sessions",
  "keywords": [
    "claude",
    "claude-code",
    "claude-agent-sdk",
    "mcp",
    "plugin",
    "memory",
    "compression",
    "knowledge-graph",
    "transcript",
    "typescript",
    "nodejs"
  ],
  "author": "Alex Newman",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/thedotmack/claude-mem.git"
  },
  "homepage": "https://github.com/thedotmack/claude-mem#readme",
  "bugs": {
    "url": "https://github.com/thedotmack/claude-mem/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-mem": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "plugin"
  ],
  "scripts": {
    "dev": "npm run build-and-sync",
    "build": "node scripts/build-hooks.js",
    "build-and-sync": "npm run build && npm run sync-marketplace",
    "sync-marketplace": "node scripts/sync-marketplace.cjs",
    "sync-marketplace:force": "node scripts/sync-marketplace.cjs --force",
    "build:binaries": "node scripts/build-worker-binary.js",
    "worker:logs": "tail -n 50 ~/.claude-mem/logs/worker-$(date +%Y-%m-%d).log",
    "worker:tail": "tail -f 50 ~/.claude-mem/logs/worker-$(date +%Y-%m-%d).log",
    "changelog:generate": "node scripts/generate-changelog.js",
    "worker:start": "bun plugin/scripts/worker-service.cjs start",
    "worker:stop": "bun plugin/scripts/worker-service.cjs stop",
    "worker:restart": "bun plugin/scripts/worker-service.cjs restart",
    "worker:status": "bun plugin/scripts/worker-service.cjs status",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist plugin/scripts/*.cjs plugin/ui"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.21",
    "@anthropic-ai/sdk": "^0.39.0",
    "@anthropic-ai/tokenizer": "^0.0.6",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.8.1",
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "express": "^4.21.2",
    "glob": "^11.0.0",
    "google-genai": "^0.7.0",
    "openai": "^4.77.3",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.21",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
